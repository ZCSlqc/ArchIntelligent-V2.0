# 请将本文件复制为 .env 并填写对应的 API Key

# OpenAI
OPENAI_API_KEY="sk-xxxxxxx"
OPENAI_MODEL_NAME="gpt-3.5-turbo"
OPENAI_EMBEDDING_MODEL_NAME="text-embedding-3-small"
OPENAI_EMBEDDING_MODEL_DIM=1536

# MOONSHOT
MOONSHOT_API_KEY="sk-xxxxxxx"
MOONSHOT_BASE_URL="https://api.moonshot.cn/v1"
MOONSHOT_MODEL_NAME="moonshot-v1-32k"

# EmbeddingModel
#HUGGINGFACE_EMBEDDING_MODEL_NAME="BAAI/bge-small-en-v1.5"
#HUGGINGFACE_EMBEDDING_MODEL_DIM=384
HUGGINGFACE_EMBEDDING_MODEL_NAME="BAAI/bge-small-zh-v1.5"
